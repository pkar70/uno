<UserControl
	x:Class="UITests.Shared.Windows_UI_Xaml_Controls.CalendarDatePicke.CalendarDatePicker_Sample"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

  <StackPanel Spacing="8">
	<TextBlock FontSize="16">
	  The default date should be May 23rd, 2020.
	</TextBlock>
	<Border BorderBrush="Blue" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Top">
	  <CalendarDatePicker x:Name="theCalendarDatePicker"
				  Margin="15,10"
				  Date="{Binding Date, Mode=TwoWay}" />
	</Border>
	<TextBlock>
	  DataContext Date=<Run Text="{Binding Date}" />
	  <LineBreak />CalendarDatePicker.Date=<Run Text="{Binding Date, ElementName=theCalendarDatePicker}" />
	</TextBlock>
  </StackPanel>
</UserControl>
